doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href="/css/semantic.css")
        link(rel="stylesheet" href="/css/starter.css")
        link(rel="stylesheet" href="/css/main.css")
        script(src="/js/jquery.js")
        script(src="/js/semantic.js")
        script(src="/js/axios.js")
        title Document
    body
        // Following Menu
        .ui.large.top.fixed.hidden.menu
            .ui.container
                a(href="/management/rep").item Qo'mita
                a(href="/management/region").item Hududiy boshqarmalar
                a.active.item Hududiy bo'limlar
                a(href="/log").item Malumotlar
                .right.menu
                    .item
                        a(href="/").ui.button Chiqish
        // Sidebar Menu
        .ui.vertical.inverted.sidebar.menu
            a(href="/management/rep").item Qo'mita
            a(href="/management/region").item Hududiy boshqarmalar
            a.active.item Hududiy bo'limlar
            a(href="/log").item Malumotlar
            a(href="/").item Chiqish
        .pusher
            .ui.inverted.vertical.masthead.segment.header-color
                .ui.container
                    .ui.text.menu
                        .ui.right.dropdown.item.item--white=name
                            i.dropdown.icon
                    h1.ui.inverted.header
                        | Davlat statistika qo'mitasi
                .ui.container
                    .ui.secondary.inverted.pointing.menu
                        a.toc.item
                            i.sidebar.icon
                        a(href="/management/rep").item Qo'mita
                        a(href="/management/region").item Hududiy boshqarmalar
                        a.active.item Hududiy bo'limlar
                        a(href="/log").item Malumotlar
                        .right.item
                            a(href="/").ui.inverted.button Chiqish
            .ui.hidden.divider
            form(action='/management/town' method='post').ui.container.large.equal.width.form.segment
                h4.ui.dividing.header Hududiy bo'limlar
                .fields
                    .field 
                        label Hududiy boshqarma
                        select#region_user.ui.fluid.search.dropdown(name='region_user')
                .fields
                    .seven.wide.field
                        label Bo'lim
                        input(type='text' placeholder='Bo\'lim' name="name")
                    .six.wide.field
                        .two.fields
                            .field 
                                label Foydalanuvchi nomi
                                input(type='text' placeholder='Foydalanuvchi nomi' name="user_name")
                            .field
                                label Kalit
                                input(type='text' name='password' placeholder='Kalit')
                button.ui.button(type="submit") Qo'shish
            .ui.container.large.equal.width.form.segment
                table.ui.celled.table
                    thead
                        tr
                            th Nomi
                            th Foydalanuvchi nomi
                            th(style="width: 150px") O'chirish
                    tbody#replist
            .ui.hidden.divider
            .ui.modal
                .header Foydalanuvchi ma'lumotlarini o'zgartirish
                .nimadir(style="padding: 20px")
                    .ui.container.large.equal.width.form.segment
                        h4.ui.dividing.header Bo'lim
                        .fields
                            .seven.wide.field
                                label Bo'lim
                                input(type='text' id="modal_name" placeholder='Management' name="name")
                            .six.wide.field
                                .two.fields
                                    .field 
                                        label Foydalanuvchi nomi
                                        input(type='text' id="modal_user_name" placeholder='Foydalanuvchi nomi' name="user_name")
                                    .field
                                        label Kalit
                                        input(type='text' id="modal_new_password" placeholder='Kalit' name='password')
                        .fields
                            .field 
                                label Hududiy boshqarma
                                select#region_user_modal.ui.fluid.search.dropdown(name='region_user')
                .actions
                    .ui.black.deny.button Yo'q
                    button#btn_update.ui.positive.right.button Ha, O'zgartirish
                script(src="/js/main.js")
                script(src="/js/main_super_admin2.js")